<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ame1"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="match_parent"
                android:src="@drawable/coffee_ame"
                >
            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">

                <TextView
                    android:drawablePadding="10dp"
                    android:layout_gravity="left"
                    android:drawableEnd="@drawable/coffee_ame_icon"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아메리카노"
                    android:textSize="20sp"
                    >
                </TextView>

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Americano"
                    android:textSize="15sp"
                    >
                </TextView>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4,000원"
                    android:textSize="20sp"
                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_iceame"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_ame2"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/coffee_iceame"
                    >
                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">

                    <TextView
                        android:drawablePadding="10dp"
                        android:layout_gravity="left"

                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이스아메리카노"
                        android:textSize="20sp"
                        >
                    </TextView>

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ice Americano"
                        android:textSize="15sp"
                        >
                    </TextView>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4,000원"
                        android:textSize="20sp"
                        >
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_heiz"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_ame3"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/coffee_ame_heiz"
                    >
                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">

                    <TextView
                        android:drawablePadding="10dp"
                        android:layout_gravity="left"

                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="헤이즐넛아메리카노"
                        android:textSize="19sp"
                        >
                    </TextView>

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hazelnut Americano"
                        android:textSize="15sp"
                        >
                    </TextView>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4,500원"
                        android:textSize="20sp"
                        >
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ess"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_ame4"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/coffee_ame_ess"
                    >
                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">

                    <TextView
                        android:drawablePadding="10dp"
                        android:layout_gravity="left"

                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="에스프레소"
                        android:textSize="20sp"
                        >
                    </TextView>

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Espresso"
                        android:textSize="15sp"
                        >
                    </TextView>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3,500원"
                        android:textSize="20sp"
                        >
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_french"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_ame5"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/coffee_ame_french"
                    >
                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">

                    <TextView
                        android:drawablePadding="10dp"
                        android:layout_gravity="left"

                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프렌치아메리카노"
                        android:textSize="20sp"
                        >
                    </TextView>

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="French Americano"
                        android:textSize="15sp"
                        >
                    </TextView>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4,000원"
                        android:textSize="20sp"
                        >
                    </TextView>

                </LinearLayout>

            </LinearLayout>






        </LinearLayout>



    </ScrollView>

</LinearLayout>